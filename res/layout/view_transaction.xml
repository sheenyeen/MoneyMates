<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background = "#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding = "5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/lastMonthArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="&lt;" 
                android:background="@drawable/button_blue"
                android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/displayMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#545454"
            android:layout_gravity="center" 
            android:padding="10dip"/>

        <Button
            android:id="@+id/nextMonthArrow"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text=">" 
            android:background="@drawable/button_blue"
            android:textColor="#ffffff"/>

        </LinearLayout>
        
        <Button
            android:id="@+id/addTransactionBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="+"
            android:layout_gravity="right" 
            android:layout_marginRight="5dp"
            android:background="@drawable/button_blue"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/totalIncomeTV"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Income"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:background="#01B18B"
            android:layout_marginLeft="5dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/totalExpenseTV"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Expenses"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:background="#F16C5B"
            android:layout_marginRight="5dp"
            android:gravity="center" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/llayoutH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/llayoutV1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:padding="15dp"
                android:paddingLeft="40dp" >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayoutV2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="4.95"
                android:padding="15dp"
                android:paddingRight="0dp">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llayoutV3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:orientation="vertical"
                android:padding="15dp"
                android:paddingRight="30dp" >
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/totalSavingTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net balance"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="30dp" >

        <Button
            android:id="@+id/reportBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:textColor="#ffffff"
            android:text="Generate report"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>
